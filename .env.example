# Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# Logging configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Service configuration
SERVICE_NAME=app-manager
COMPOSE_PROJECT_NAME=app-services

# Platform configuration
PLATFORM_PORT=8000
PLATFORM_RESTART_POLICY=unless-stopped

# Service ports
SERVICE_A_PORT=8001
SERVICE_B_PORT=8002
SERVICE_C_PORT=8003
SERVICE_D_PORT=8004
SERVICE_E_PORT=8005

# Health check configuration
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Docker image registry (leave empty for local builds)
REGISTRY=

# Image tags
IMAGE_TAG=latest

# Volume persistence
ENABLE_PERSISTENCE=true

# Network configuration
NETWORK_NAME=app-network
NETWORK_DRIVER=bridge

# Resource limits (Docker Compose v3.8+)
# MEMORY_LIMIT=512m
# MEMORY_RESERVATION=256m
# CPU_SHARES=1024

# Database configuration (if needed)
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=app_db
# DB_USER=app_user
# DB_PASSWORD=secure_password

# Redis configuration (if needed)
# REDIS_HOST=redis
# REDIS_PORT=6379

# Monitoring (Prometheus, etc.)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Log driver configuration
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=5

# Timezone
TZ=UTC
